<h2 class="text-white" style="padding-top: 10px;">投稿</h2>
<p class="post" style="text-align: right;"><a href="/posts/2012/konno">戻る>></a></p>
<p style="text-align: right;"><a href="/nogitops">トップページへ>></a></p>
<%= form_for(@post, url:{controller:"posts", action:"create_konno"}, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>
    <div class="form-group">
        <%= f.fields_for :images do |i|%>
          <%= i.file_field :file, multiple: true, name: "images[file][]" %>
        <% end %>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>
<%= @s3_direct_post.inspect %>


<script>

$(function() {
  $('.directUpload').find("input:file").each(function(i, elem) {
    var fileInput    = $(elem);
    var form         = $(fileInput.parents('form:first'));
    var submitButton = form.find('input[type="submit"]');
    var progressBar  = $("<div class='bar'></div>");
    var barContainer = $("<div class='progress'></div>").append(progressBar);
    fileInput.after(barContainer);
    fileInput.fileupload({
      fileInput:       fileInput,
      url:             form.data('url'),
      type:            'POST',
      autoUpload:       true,
      formData:         form.data('form-data'),
      paramName:        'file',
      dataType:         'XML',
      replaceFileInput: false,
      progressall: function (e, data) {
        console.log('progressall');
        var progress = parseInt(data.loaded / data.total * 100, 10);
        progressBar.css('width', progress + '%')
      },
      start: function (e) {
        console.log('start');
        submitButton.prop('disabled', true);

        progressBar.
          css('background', 'green').
          css('display', 'block').
          css('width', '0%').
          text("Loading...");
      },
      done: function(e, data) {
        console.log('done'); 
        submitButton.prop('disabled', false);
        progressBar.text("投稿準備完了");

        // extract key and generate URL from response
        var key   = $(data.jqXHR.responseXML).find("Key").text();
        var url   = 'https://' + form.data('host') + '/' + key; 
        var thumb = "https://nogi-masa-resized.s3.ap-northeast-1.amazonaws.com/"+key;

        function set_csrftoken() {
          $.ajaxPrefilter(function (options, originalOptions, jqXHR) {
            if (!options.crossDomain) {
              const token = $('meta[name="csrf-token"]').attr('content');
              if (token) {
                return jqXHR.setRequestHeader('X-CSRF-Token', token);
              }
            }
          });
        }

        $(".btn").on("click", function() {
          submitButton.prop('disabled', true);
          console.log("イベント");
          set_csrftoken();
          progressBar.text("送信中");
          setTimeout(ajax_function, 3000);
          progressBar.
            css("background", "blue");
        });

        function ajax_function(){
          $.ajax({
            type: "POST",
            url: "new_konno",
            data: {
              images: {
                file:[thumb],
                place:"[\"konno\"]"
              }
            },
            dataType: "html"
          })
          .done(function(){
            submitButton.prop('disabled', false);
            console.log("thumbnail success");
            location.href="/posts/2012/konno";
          })
          .fail(function(){
            console.log("thumbnail fail");
          })
        };
      },
      fail: function(e, data) {
        submitButton.prop('disabled', false);

        progressBar.
          css("background", "red").
          text("Failed");
      }
    });
  });
});
</script>