<% if current_nogimasa.already_liked?(post)%>
    <%= button_to nogipost_like_path(id: post.id, nogipost_id: post.id), method: :delete, remote: true do %>
        <i class="fas fa-heart unlike-btn"></i>
    <% end %>
<% else %>
    <%= button_to nogipost_likes_path(id: post.id, nogipost_id: post.id), method: :post, remote: true do %>
        <i class="far fa-heart like-btn"></i>
    <% end %>
<% end %>
<p style="display: inline-block;"><%= post.likes.count%></p>