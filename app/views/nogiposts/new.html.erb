<h1 class="text-white">投稿</h1>
<p style="text-align: right;"><a href="/nogiposts">タイムラインへ>></a></p>
<div style="margin-top: 85px;">
    <%= form_for(@nogipost, url:{controller: "nogiposts", action:"create"}) do |form| %>
        <div class="form-group">
            <label for="content">Content</label>
            <%= form.text_area :content, {rows:5, class:"form-control"}%>
        </div>
        <div class="form-group">
            <%= form.hidden_field :nogimasa_id, :value=>current_nogimasa.id, class: "form-control" %>
        </div>
        <%= form.submit "投稿", class:"btn btn-primary" %>
    <% end %>
</div>