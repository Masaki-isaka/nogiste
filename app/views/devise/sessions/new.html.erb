<div class="log" style="">
  <h2 class="text-white" style="padding-top: 10px;">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login">
      <div class="form-group" style="padding-top: 65px;">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :username, class:"form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="check">
        <div class="form-group">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :次回から入力を省略 %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  <% end %>
  <hr>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name) %><br />
  <% end %>

  <div style="margin-top: 30px;">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードを忘れた方", new_password_path(resource_name) %><br />
    <% end %>
  </div>
  
</div>